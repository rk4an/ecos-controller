<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory android:title="@string/tv_network" >
        <EditTextPreference
            android:key="ip"
            android:title="@string/tv_ip"
            android:defaultValue="192.168.1.10" >
        </EditTextPreference>
        <EditTextPreference
            android:inputType="number"
            android:key="port"
            android:title="@string/tv_port"
            android:defaultValue="15471" >
        </EditTextPreference>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/tv_console" >
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="pref_sort"
            android:summary="@string/pref_sort_sum"
            android:title="@string/pref_sort_title" />

        <ListPreference
            android:defaultValue="10"
            android:entries="@array/speed_step_entries"
            android:entryValues="@array/speed_step_values"
            android:key="pref_speed"
            android:summary="@string/pref_speed_step_sum"
            android:title="@string/pref_speed_step_title" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="pref_locodesc"
            android:summary="@string/pref_locodesc_sum"
            android:title="@string/pref_locodesc_title" />
        
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="pref_lockrotation"
            android:summary="@string/pref_lockrotation_sum"
            android:title="@string/pref_lockrotation_title" />
        
    </PreferenceCategory>

</PreferenceScreen>